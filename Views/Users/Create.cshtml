@using NovaWebSolution.Models;
@model Users

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    <div class="card">
        <div class="card-body">
            <div class="form-row">
                <div class="form-group col-md-3">
                    @Html.LabelFor(x => x.FirstName)
                    @Html.TextBoxFor(x =>x.FirstName, new { @class= "form-control", @autocomplete = "new-FirstName" })
                    @Html.ValidationMessageFor(x => x.FirstName, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-3">
                    @Html.LabelFor(x => x.LastName)
                    @Html.TextBoxFor(x => x.LastName, new { @class = "form-control", @autocomplete = "new-LastName" })
                    @Html.ValidationMessageFor(x => x.LastName, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-3">
                    @Html.LabelFor(x => x.Email)
                    @Html.TextBoxFor(x => x.Email, new {@type = "email", @class = "form-control", @autocomplete = "new" })
                    @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-3">
                    @Html.LabelFor(x => x.Phone)
                    @Html.TextBoxFor(x => x.Phone, new { @type = "tel", @class = "form-control", @autocomplete = "new" })
                    @Html.ValidationMessageFor(x => x.Phone, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-3">
                    @Html.LabelFor(x => x.Address)
                    @Html.TextBoxFor(x => x.Address, new { @class = "form-control", @autocomplete = "new" })
                    @Html.ValidationMessageFor(x => x.Address, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-3">
                    @Html.LabelFor(x => x.DOB)
                    @Html.TextBoxFor(x => x.DOB, new { @class = "datepicker form-control", @autocomplete = "off" })
                    @Html.ValidationMessageFor(x => x.DOB, "", new { @class = "text-danger"})
                </div>
                <div class="form-group col-md-3">
                    @Html.LabelFor(x => x.CallerName)
                    @Html.TextBoxFor(x => x.CallerName, new { @class = "form-control", @autocomplete = "new" })
                    @Html.ValidationMessageFor(x => x.CallerName, "", new { @class = "text-danger" })
                </div>
            </div>
            @Html.ValidationSummary(true, null, new { @class = "text-danger" })
            <button type="submit" class="btn btn-primary float-right">Submit</button>
        </div>
    </div>
}
