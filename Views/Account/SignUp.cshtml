    <script>
        $(function () {
            $(".datepicker").datepicker();
        });

        function SaveImg() {

            if (signaturePad.isEmpty()) {
                alert("Please provide a signature first.");
            } else {
                var dataURL = signaturePad.toDataURL("image/jpeg");

                var elem = document.getElementsByClassName('.digitalSignURL');
                elem.val = dataURL;

                var dateObject = $("#ActivationDate").datepicker('getDate');
                var d = new Date(dateObject.getFullYear(), dateObject.getMonth(), dateObject.getDate());

                var activationDate = d.toISOString().split('T')[0];
                //console.log(elemActivationDate.val);
                $.ajax({
                    type: 'POST',
                    url: "@Url.Action("SignUp", "Account")",
                    data: { ActivationDate: activationDate, DigitalSignatureData: elem.val },
                    success: function (res) {
                        window.location.replace('/Account/LogIn');
                    },
                    error: function (err) {
                        console.log(err);
                    },
                    dataType: 'json'
                });
            }
        }
    </script>
